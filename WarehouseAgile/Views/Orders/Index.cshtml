@model IEnumerable<WarehouseAgile.Models.OrderModel>

<h2>Zamówienia</h2>

<p>
    @Html.ActionLink("Złóż zamówienie", "Create")
</p>


@if (Model != null && Model.Any())
{
    <table>
        <tr>
            <th>
                @Html.LabelFor(order => order.FirstOrDefault().OrderDate)
            </th>
            <th>
                @Html.LabelFor(order => order.FirstOrDefault().CarFullName)
            </th>
            <th>
                @Html.LabelFor(order => order.FirstOrDefault().Branch)
            </th>
            <th>
                @Html.LabelFor(order => order.FirstOrDefault().Color)
            </th>
            <th>
                @Html.LabelFor(order => order.FirstOrDefault().TotalPrice)
            </th>
            <th>
                @Html.LabelFor(order => order.FirstOrDefault().Status)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Branch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edycja", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="error">Brak zamówień do wyświetlenia</div>
}